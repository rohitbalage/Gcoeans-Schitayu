<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.schitayuapp.rohitgcoea.Pattern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET PATTERN LOCK "

            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:background="#333639"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.andrognito.patternlockview.PatternLockView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/pattern_lock_view"
                />
        </LinearLayout>



        <Button
            android:id="@+id/btnSetPattern"
            android:text="SET PATTERN"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:background="@drawable/button_backgroundsquare"
            android:layout_gravity="center_horizontal"
            android:layout_height="30sp" />


    </LinearLayout>




</LinearLayout>

